<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fear.healthrecord.mapper.UserSafeMapper" >
    <insert id="registeruser" parameterType="java.util.HashMap" >
        insert into system_login_user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="sys_user_name != null" >
                sys_user_name,
            </if>
            <if test="sys_user_password != null" >
                sys_user_password,
            </if>
            <if test="sys_rank != null" >
                sys_rank,
            </if>
            <if test="sys_status != null" >
                sys_status,
            </if>

            <if test="sign != null" >
                sign,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="sys_user_name != null" >
                #{sys_user_name,jdbcType=VARCHAR},
            </if>
            <if test="sys_user_password != null" >
                #{sys_user_password,jdbcType=VARCHAR},
            </if>
            <if test="sys_rank != null" >
                #{sys_rank,jdbcType=INTEGER},
            </if>
            <if test="sys_status != null" >
                #{sys_status,jdbcType=INTEGER},
            </if>
            <if test="sign != null" >
                #{sign,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>
    <select id="loginuser" parameterType="java.util.HashMap" resultType= "java.util.HashMap">
    select sys_id,sys_user_name,sys_user_password,sys_rank,sys_status,sign  from system_login_user
    where 1=1
    <if test="sys_user_name != null" >
        and sys_user_name= #{sys_user_name,jdbcType=VARCHAR}
    </if>
</select>
    <select id="selectSys_id" parameterType="java.util.HashMap" resultType= "java.util.HashMap">
        select sys_id from system_login_user
        where 1=1
        <if test="sys_user_name != null" >
            and sys_user_name= #{sys_user_name,jdbcType=VARCHAR}
        </if>
    </select>
    <insert id="insertSysUserInfo" parameterType="java.util.HashMap" >
        insert into system_login_user_info
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="sys_id != null" >
                sys_id,
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >

            <if test="sys_id != null" >
                #{sys_id,jdbcType=INTEGER},
            </if>

        </trim>
    </insert>
</mapper>